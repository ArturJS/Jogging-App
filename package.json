{
  "name": "react-ssr-miniq",
  "description": "Example of an isomorphic (universal) webapp using react and hot reloading",
  "author": "Artur Nizamutdinov <nizamutdin.art@gmail.com> (http://github.com/ArturJS)",
  "license": "MIT",
  "version": "0.9.0",
  "repository": {
    "type": "git",
    "url": "http://node-js-sample.herokuapp.com/node.svg"
  },
  "homepage": "https://github.com/ArturJS/React-SSR-MiniQ",
  "keywords": [
    "react",
    "isomorphic",
    "universal",
    "webpack",
    "express",
    "hot reloading",
    "react-hot-reloader",
    "starter",
    "boilerplate",
    "babel"
  ],
  "main": "bin/server.js",
  "scripts": {
    "start": "node ./src/index.js",
    "dev": "concurrent --kill-others \"npm run watch-client\" \"npm run start\"",
    "build": "better-npm-run build",
    "static-build": "npm run build && node ./bin/static-export.js",
    "lint": "eslint -c .eslintrc src api",
    "watch-client": "better-npm-run watch-client",
    "test": "jest --env=jsdom",
    "test:coverage": "jest --env=jsdom --coverage",
    "db:migrate": "npx sequelize db:migrate",
    "create-db-dev": "better-npm-run create-db-dev",
    "create-db-prod": "better-npm-run create-db-prod",
    "postinstall": "node ./scripts/tasks/heroku-build.js"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}",
      "!src/**/*index.{js,jsx}"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](build|docs|node_modules|scripts)[/\\\\]"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(jsx?)$",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ]
  },
  "betterScripts": {
    "start-prod": {
      "command": "node ./bin/server.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production"
      }
    },
    "start-dev": {
      "command": "node ./bin/server.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 3000
      }
    },
    "watch-client": {
      "command": "node webpack/webpack-dev-server.js",
      "env": {
        "UV_THREADPOOL_SIZE": 100,
        "NODE_PATH": "./src",
        "PORT": 3000
      }
    },
    "build": {
      "command": "webpack --verbose --colors --display-error-details --config webpack/prod.config.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "create-db-dev": {
      "command": "node ./bin/create-database-if-not-exists.js",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "create-db-prod": {
      "command": "node ./bin/create-database-if-not-exists.js",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
